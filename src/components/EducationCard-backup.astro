---
interface Props {
	date: string;
	title: string;
	institution: string;
    description: string;
}

const { date, title, institution, description } = Astro.props;
---

<div class="edu-card">
<div>
    <h1>{title}</h1>
    <h2>{institution}</h2>
    <h3>{description}</h3>

</div>
<div class="logo">
    <slot name="svg">
    </slot> 
</div>
<div class="date">
    <time>{date}</time>
</div>

</div>

<style>

.edu-card {
    text-align: left;
    border-radius: 8px;
    border-color: white;
    border-width: 2px;
    border-style: solid;
    padding: 15px;
    display: flex;
    flex-direction: row;
    gap: 25px;
    margin-top: 0px;
    margin-bottom: 15px;
}

h1 {
    font-size: 16pt;
    font-weight: 600;
    margin: 0;
    color: var(--yellow-200);
}

h2 {
    font-size: 14pt;
    font-weight: 500;
    margin-top: 3px;
}

h3 {
    font-size: 12pt;
    font-weight: 300;
    margin-bottom: 3px;
}

.logo {
    margin-right: 25px;
    margin-left: auto;
    width: 10%;
}

.date {
    text-align: right;
    margin-left: auto;
    margin-right: 0px;
    margin-top: auto;
    margin-bottom: auto;
    width: 15%;
}

/* For mobile devices */
@media only screen and (max-width: 900px) {
    .edu-card {
        flex-direction: column;
    }

    .date {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        width: 100%;
    }

    .logo {
        margin-left: auto;
        margin-right: auto;
    }
}

</style>