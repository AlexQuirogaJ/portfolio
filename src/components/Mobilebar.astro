---
import { Image } from "astro:assets";

import { PRIMARY_COLOR, SECONDARY_COLOR } from "../config";

const primaryColor = PRIMARY_COLOR;
const secondaryColor = SECONDARY_COLOR;
---

<div class="topbar-column">
    <div class="profile">
      <a href="/">
        <Image class="profile-photo" format="webp" width={300} height={300} src="/profile_3.png" alt="Profile image" />
      </a>

      <ul>
        <li><a href="#education">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 16 16"><path fill="currentColor" d="M15.09 12.79a1 1 0 0 0-.086-1.638L15 5.33L14 6v5.15a1.001 1.001 0 0 0-.092 1.629l-.378.502a2.48 2.48 0 0 0-.53 1.498v1.222h.815a.88.88 0 0 0 .853-.664l.331-1.336v2h1v-1.21a2.486 2.486 0 0 0-.534-1.505zM8 0L0 4l8 5l8-5z"/><path fill="currentColor" d="M8 10L3 6.67v1.71C3 9.29 5.94 12 8 12s5-2.71 5-3.62V6.67z"/></svg>
