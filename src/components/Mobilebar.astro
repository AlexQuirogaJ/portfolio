---
import { Image } from "astro:assets";

import CVIcon from "./icons/CVIcon.astro";
import ContactIcon from "./icons/ContactIcon.astro";
import EducationIcon from "./icons/EducationIcon.astro";
import ExperienceIcon from "./icons/ExperienceIcon.astro";
import ProjectsIcon from "./icons/ProjectsIcon.astro";
import SkillsIcon from "./icons/SkillsIcon.astro";
---

<div class="topbar-column">
    <div class="profile">
      <a href="/">
        <Image class="profile-photo" format="webp" width={300} height={300} src="/profile.jpg" alt="Profile image" />
      </a>

      <ul>
        <li><a href="#education">
          <EducationIcon size="25"/>
          </a></li>
        <li><a href="#experience">
          <ExperienceIcon size="25"/>
          </a></li>
          <li><a href="#projects">
            <ProjectsIcon size="25"/>
            </a></li>
        <li><a href="#skills">
          <SkillsIcon size="25"/>
          </a></li>
        <li><a href="#cv">
          <CVIcon size="25"/>
          </a></li>
        <li><a href="#contact">
          <ContactIcon size="25"/>
        </a>
        </li>
    </ul>

    </div>
</div>

<style>

* {
    /* background-color: var(--secondaryColor); */
    color: white;
}

.topbar-column {
    display: flex;
    flex-direction: row;
    height: 100%;
    margin-top: 0px;
    margin-bottom: 0px;
    margin-left: 0px;
    margin-right: 0px;
    width: 100%;
    height: 60px;
    align-content: center;
    border-radius: 0px;
    border-bottom-style: solid;
    border-bottom-width: 2px;
    padding-top: 2px;
    padding-bottom: 2px;

    /* Analogue Bubblebath */
    background-color: hsla(219.99999999999997, 4%, 13%, 1);
    background-image: radial-gradient(circle at 20% 77%, hsla(180, 100%, 17%, 0.53) 18.659173203473348%, transparent 42.13584553913468%), radial-gradient(circle at 43% 56%, hsla(180, 100%, 17%, 0.32) 13.933329163025846%, transparent 44.96896996083245%), radial-gradient(circle at 85% 108%, hsla(180, 100%, 17%, 0.45) 26.427737780903414%, transparent 61.65962043205807%), radial-gradient(circle at 65% 82%, hsla(180, 100%, 17%, 0.62) 11.498706521470005%, transparent 55.38219949887443%), radial-gradient(circle at 16% 63%, hsla(227.6470588235294, 0%, 6%, 1) 31.903152547497644%, transparent 49.64645694939111%), radial-gradient(circle at 1% 2%, hsla(231.42857142857144, 5%, 23%, 1) 121%, transparent 150%), radial-gradient(circle at 69% 17%, hsla(227.6470588235294, 0%, 6%, 1) 0%, transparent 81%), radial-gradient(circle at 100% 97%, hsla(240, 6%, 93%, 1) 0%, transparent 47.0714621267486%), radial-gradient(circle at 20% 103%, hsla(227.6470588235294, 0%, 6%, 1) 29.75396196974718%, transparent 50.579922535581936%), radial-gradient(circle at 80% 93%, hsla(227.6470588235294, 0%, 6%, 1) 29.75396196974718%, transparent 50.579922535581936%), radial-gradient(circle at 69% 25%, hsla(227.6470588235294, 0%, 6%, 1) 31.903152547497644%, transparent 49.64645694939111%), radial-gradient(circle at 18% 29%, hsla(227.6470588235294, 0%, 6%, 1) 31.903152547497644%, transparent 49.64645694939111%);
    background-blend-mode: normal, normal, normal, normal, normal, multiply, normal, normal, normal, normal, normal, normal;
}

.profile {
    align-content: center;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: auto;
    margin-right: auto;
    align-items: center;
}

.profile-photo {
  border-radius: 50%;
  width: 40px;
  height: auto;
  border-style: solid;
  border-width: 2px;
  border-color: #ffffff;
  margin-top: auto;
  margin-bottom: auto;
  margin-right: auto;
  
}

ul {
    list-style-type: none;
    margin-left: 30px;
    padding: 0;
    display: flex;
    flex-direction: row;
    overflow: auto;
    gap: 25px;
}

ul li a {
    text-decoration: none;
}
ul li a:hover {
    /* background-color: var(--primaryColor); */
    opacity: 0.8;
    color: var(--yellow-200);
}

.profile, .topbar-menu {
  display: block;
}

.topbar-menu {
  margin-top: 40px;
}

.profile {
  display:flex;
  justify-content: center;
}

/* For mobile devices */
@media only screen and (max-width: 500px) {
  ul {
    gap: 15px;
  }
}

</style>