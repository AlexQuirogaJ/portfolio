---
import SideBarFooter from "./SideBarFooter.astro";
import SideBarMenu from "./SideBarMenu.astro";
import { Image } from "astro:assets";

interface Props {
  sideBarActiveItemID: string;
}

const { sideBarActiveItemID } = Astro.props;
---

<div class="sidebar-column">
  <div class="profile">
    <a href="/">
      <Image class="profile-photo" format="webp" width={300} height={300} src="/profile.png" alt="Profile image" />
    </a>
  </div>
  <div class="sidebar">
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
  </div>
  <div class="footer">
    <SideBarFooter />
  </div>
</div>

<style>

.sidebar-column {
  align-content: center;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.profile-photo {
  border-radius: 50%;
  width: 150px;
  height: auto;
  border-style: solid;
  border-width: 5px;
  border-color: #ffffff;
  
}

.profile, .sidebar, .footer {
  display: block;
  background-color: #191c1e;
}

.sidebar {
  margin-top: 40px;
}

.profile {
  display:flex;
  justify-content: center;
}

.footer {
  margin-top: auto;
  margin-bottom: 40px;
}

</style>
