---
import SideBarFooter from "./SideBarFooter.astro";
import SideBarMenu from "./SideBarMenu.astro";
import { Image } from "astro:assets";
---

<div class="sidebar-column">
    <div class="profile">
      <a href="/">
        <Image class="profile-photo" format="webp" width={300} height={300} src="/profile_4.png" alt="Profile image" />
      </a>
    </div>
    <div class="sidebar-menu">
      <SideBarMenu />
    </div>
    <div class="footer">
      <SideBarFooter />
    </div>
</div>

<style>

.sidebar-column {
  align-content: center;
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-top: 50px;
}

.profile-photo {
  border-radius: 50%;
  width: 150px;
  height: auto;
  border-style: solid;
  border-width: 4px;
  border-color: #ffffff;
  
}

.profile, .sidebar-menu, .footer {
  display: block;
  background-color: var(--secondaryColor);
}

.sidebar-menu {
  margin-top: 40px;
}

.profile {
  display:flex;
  justify-content: center;
}

.footer {
  margin-top: auto;
  margin-bottom: 40px;
}

</style>
