---
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import BaseHead from "../components/BaseHead.astro";
import Mobilebar from "../components/Mobilebar.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";

interface Props {
  title?: string;
  description?: string;
  includeSidebar: boolean;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true} = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="relative">
    <!-- <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div> -->
    
    <div
    class="absolute top-0 bottom-0 z-[-2] h-full w-full bg-gray-50 dark:bg-gray-950
    bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
    dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  ></div>

    <!-- <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div> -->
    
    <div class="main-layout">
      <div class="sidebar">
        {includeSidebar && <SideBar />}
      </div>
      <div class="mobile-bar">
        {<Mobilebar />}
      </div>
      <div class="main-page">
        <div class="main-content">
          <main>
            <slot />
          </main>
        </div>
        <div class="footer">
          <footer>
            <Footer />
          </footer>
      </div>

    </div>
  </body>
</html>

<style is:global>

:root {
  --primaryColor: rgb(10 10 10);
  --secondaryColor: rgb(10 10 10);
  --terciaryColor: rgb(10 10 10);
  --yellow-100: rgb(254 249 195);
  --yellow-200: rgb(254 240 138);
  --yellow-300: rgb(253 224 71);
  --sky-200: rgb(186 230 253);
  --sky-400: rgb(56 189 248);
  --sky-700: rgb(3 105 161);
  --cyan-400: rgb(34 211 238);
  --cyan-500: rgb(6 182 212);
  --teal-400: rgb(45 212 191);
  --teal-500: rgb(20 184 166);
  --teal-600: rgb(13 148 136);
}

</style>

<style>

* {
    margin: 0;
    padding: 0;
    /* box-sizing: border-box; */
    font-family: system-ui;
    text-decoration: none;
}

/* html {
  scroll-behavior: smooth;
  margin: 0;
} */

body {
  background-color: white;
  /* height: 100vh;
  width: 100vw;
  margin: 0; */
  /* display: flex;
  flex-direction: column;
  min-height: 100%;
  color: rgba(17, 17, 17, 0.9); */
}

.mobile-bar {
  display: none;
}

.main-layout {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    height: 100%;
}

.sidebar {
  width: 300px;
  height: 100%;
  margin-top: 0px;
  margin-bottom: 20px;
  /* background-color: var(--secondaryColor); */
  color: #ede8e6;
  position: fixed;
}

.main-page {
    flex-grow: auto;
    margin: 0px 0 0 300px;
    width: 100%;
    height: 100%;
    padding: 0 25px;
    /* overflow-y: scroll; */
    /* background-color: var(--primaryColor); */
}

.main-content {
  margin-top: 40px;
  padding-top: 40px;
  font-family: system-ui;
  color: #ede8e6;
  font-size: 14pt;
  display: flex;
  flex-direction: column;
  max-width: 1000px;
  margin-left: auto;
  margin-right:auto;
  
}

.footer {
  margin-top: auto;
  margin-bottom: 100px;
}

/* For tablets */
@media only screen and (max-width: 1200px) {
  .sidebar {
    width: 220px;
  }
  .main-page {
    margin-left: 220px;
  }
}

/* For mobile devices */
@media only screen and (max-width: 800px) {
  .sidebar {
    display: none;
  }
  .main-page {
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 50px;
  }
  .mobile-bar {
    width: 100%;
    display: block;
    position: fixed;
    z-index: 100;
  }
}

</style>

