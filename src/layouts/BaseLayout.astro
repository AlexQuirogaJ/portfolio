---
import SideBar from "../components/SideBar.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION, PRIMARY_COLOR, SECONDARY_COLOR } from "../config";
import BaseHead from "../components/BaseHead.astro";

interface Props {
  title?: string;
  description?: string;
  includeSidebar: boolean;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true} = Astro.props;

const primaryColor = PRIMARY_COLOR;
const secondaryColor = SECONDARY_COLOR;

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="main-layout">
      <div class="sidebar">
        {includeSidebar && <SideBar />}
      </div>
      <div class="main-page">
        <div class="main-content">
          <main>
            <slot />
          </main>
        </div>
        <div class="footer">
          <footer>
            <Footer />
          </footer>
      </div>

    </div>
  </body>
</html>

<style define:vars={{ primaryColor, secondaryColor }}>
* {
    margin: 0;
    padding: 0;
    /* box-sizing: border-box; */ */
    font-family: system-ui;
    text-decoration: none;
}

body {
    background-color: var(--primaryColor);
}

.main-layout {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    height: 100vh;
}

.sidebar {
  width: 300px;
  height: 100%;
  margin-top: 0px;
  margin-bottom: 20px;
  background-color: var(--secondaryColor);
  color: #ede8e6;
  position: fixed;
}

.main-page {
    flex-grow: auto;
    margin: 0px 0 0 300px;
    width: 100%;
    height: 100vh;
    padding: 0 40px;
    /* overflow-y: scroll; */
    background-color: var(--primaryColor);
}

.main-content {
  margin-top: 40px;
  padding-top: 40px; 40px;
  font-family: system-ui;
  color: #ede8e6;
  font-size: 14pt;
  display: flex;
  flex-direction: column;
}

.footer {
  margin-top: auto;
  margin-bottom: 100px;
}

</style>