---
import Layout from "./Layout.astro"
const { frontmatter } = Astro.props 
---
<Layout title={frontmatter.title} description="Project" image={frontmatter.cover}>
  <img class="cover" src={frontmatter.cover} alt="cover" height="400">
  <h1 class="title">{frontmatter.title}</h1>
  <slot />
</Layout>

<style>
  .cover {
    width: 100%;
    object-fit: cover;
    border-radius: 12px;
    border-style: solid;
    border-width: 2px;
  }

  h1 {
    margin-top: 30px;
    margin-bottom: 30px;
  }
</style>